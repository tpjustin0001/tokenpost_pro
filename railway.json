{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "root": "flask-backend",
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "gunicorn app:app --workers 1 --threads 4 --timeout 120 --bind 0.0.0.0:$PORT --log-level debug --access-logfile - --error-logfile -"
    }
}